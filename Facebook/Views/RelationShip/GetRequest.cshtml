@using Facebook.Models.BaseEntity
@model ICollection<User>
@{
    Layout = null;
}


<div class="panel panel-default panel-custom">
    <div class="panel-heading">
        <h3 class="panel-title">
            Friendship Requests

            <small>&emsp; <a href="#">View all</a></small>
        </h3>
    </div>
    <div class="panel-body">

        @foreach (var item in Model)
        {
            <div class="media">
                <div class="media-left">
                    <img src="~/image/facebook-profile.png" alt="" class="media-object img-rounded" width="32" height="32">
                </div>
                <div class="media-body">
                    <a href="#"><h4 class="media-heading">@item.Name</h4></a>
                    <a href="/RelationShip/Confirm/@item.ID" class="btn btn-default btn-xs">
                        +
                        <span class="glyphicon glyphicon-user"></span>
                        Confirm 
                    </a>
                    <a href="/RelationShip/Delete/@item.ID" class="btn btn-default btn-xs">
                        -
                        <span class="glyphicon glyphicon-user"></span>
                        Ignore
                    </a>
                </div>

            </div>
        }
    </div>
    <div class="panel-footer">

    </div>
</div>